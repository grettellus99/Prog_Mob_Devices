<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Tag_exercises">
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomCardViewStyle">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="notifications">
        <item name="backgroundColor">@color/secondary_main</item>
        <item name="fontFamily">@font/play_regular</item>
    </style>

    <style name="categorias">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/secondary_MenuBar</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="card_item_text_2_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/play_bold</item>
        <item name="android:textColor">@color/secondary_MenuBar</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="card_item_inf">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:textColor">@color/secondary_MenuBar</item>
    </style>

    <style name="text_exercise_especifico">
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:textColor">@color/secondary_MenuBar</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#E6000000</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="day_of_week">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="routine_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/secondary_MenuBar</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="acept_button" parent="day_of_week">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:backgroundTint">#CC129A49</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_check</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textColor">@color/font_grid</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="exercises_managment_txt_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/play_bold</item>
        <item name="android:textColor">@color/secondary_MenuBar</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="items_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:backgroundTint">#9945526C</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/secondary_MenuBar</item>
        <item name="android:textColorHint">#9945526C</item>
    </style>
</resources>