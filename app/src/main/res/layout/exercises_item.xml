<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item_exercises"
        android:layout_width="0dp"
        android:layout_height="136dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_card_item_exercises"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/todo"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_card_item_exercises_title"
                    style="@style/card_item_text_2_bold"
                    android:layout_marginBottom="10dp"
                    android:text="@string/todo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_card_item_exercises_cat_1"
                        style="@style/card_item_text_2_bold"
                        android:text="@string/equipo"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_card_item_exercises_equip"
                        style="@style/card_item_inf"
                        android:text="@string/todo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_card_item_exercises_cat_2"
                        style="@style/card_item_text_2_bold"
                        android:text="@string/muscles"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_card_item_exercises_muscles"
                        style="@style/card_item_inf"
                        android:text="@string/todo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_card_item_exercises_cat_3"
                        style="@style/card_item_text_2_bold"
                        android:text="@string/dificultad"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_card_item_exercises_level"
                        style="@style/card_item_inf"
                        android:text="@string/todo" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>